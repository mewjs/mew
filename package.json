{
  "name": "mewjs",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mewjs/mew.git"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "cz": "git-cz",
    "lint": "mew -E HUSKY_GIT_PARAMS --rule",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "conventional": true,
      "skipQuestions": [
        "issues"
      ],
      "types": [
        {
          "emoji": "✨",
          "code": ":sparkles:",
          "description": "引入新特性",
          "name": "feat"
        },
        {
          "emoji": "🐛",
          "code": ":bug:",
          "description": "缺陷修复",
          "name": "fix"
        },
        {
          "emoji": "⚡️",
          "code": ":zap:",
          "description": "Improving performance.",
          "name": "perf"
        },

        {
          "emoji": "🎨",
          "code": ":art:",
          "description": "改进代码的结构、格式",
          "name": "style"
        },
        {
          "emoji": "🔥",
          "code": ":fire:",
          "description": "移除代码、文件",
          "name": "prune"
        },
        {
          "emoji": "💄",
          "code": ":lipstick:",
          "description": "更新用户界面或样式文件",
          "name": "ui"
        },
        {
          "emoji": "📝",
          "code": ":pencil:",
          "description": "编写文档",
          "name": "docs"
        },
        {
          "emoji": "✅",
          "code": ":white_check_mark:",
          "description": "增加测试用例",
          "name": "test"
        },
        {
          "emoji": "🚨",
          "code": ":rotating_light:",
          "description": "处理代码规范警告",
          "name": "lint"
        },
        {
          "emoji": "🚧",
          "code": ":construction:",
          "description": "正在进行中的工作",
          "name": "wip"
        },
        {
          "emoji": "⚡️",
          "code": ":zap:",
          "description": "性能优化",
          "name": "perf"
        },
        {
          "emoji": "♻️",
          "code": ":recycle:",
          "description": "代码重构",
          "name": "refactor"
        },
        {
          "emoji": "⏪",
          "code": ":rewind:",
          "description": "回滚代码",
          "name": "revert"
        },
        {
          "emoji": "🔧",
          "code": ":wrench:",
          "description": "修改配置文件",
          "name": "config"
        },
        {
          "emoji": "🔀",
          "code": ":twisted_rightwards_arrows:",
          "description": "合并分支",
          "name": "merge"
        },
        {
          "emoji": "🔖",
          "code": ":bookmark:",
          "description": "发布版本",
          "name": "release"
        },
        {
          "emoji": "🎉",
          "code": ":tada:",
          "description": "初始化提交",
          "name": "init"
        }
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "mew --fix"
    ]
  },
  "devDependencies": {
    "@mewjs/cli": "workspace:*",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-emoji": "^1.3.2-canary.2",
    "husky": "^7.0.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.3.4"
  }
}
